<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>UCIME EJS</h1>
    <h3>IME: <%=ime%> <%=prezime%></h3>
    <ul>
      <% niza.forEach(grad => { %>
      <li><%=grad%></li>
      <% }); %>
    </ul>

    <table border="1" width="100%">
      <tr>
        <th>Ime</th>
        <th>Prezime</th>
        <th>Prosek</th>
      </tr>
      <% studenti.forEach(s => { %>
      <tr>
        <td><%=s.ime%></td>
        <td><%=s.prezime%></td>
        <td><%=s.prosek%></td>
        <td>
          <form action="/delete/ <%= s.ime %>" method="post">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </table>

    <h2>Dodadi nov student:</h2>
    <form action="/" method="post">
      <label for="ime">Ime:</label>
      <input type="text" id="ime" name="ime" required /> <br />

      <label for="prezime">prezime:</label>
      <input type="text" id="prezime" name="prezime" required /> <br />

      <label for="prosek">prosek:</label>
      <input type="number" id="prosek" name="prosek" required /> <br />

      <input type="submit" value="Add student" />
    </form>
  </body>
</html>
